<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.login_signup.Page_Login"
    tools:openDrawer="start">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorGray2"
            android:text=" Connexion AIS "
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:text="ip" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:inputType="text"
                    android:text="user" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:inputType="text"
                    android:text="pass" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:inputType="text"
                    android:text="Env" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ipadresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="http://192.168.100.60:94/jderest" />

                <EditText
                    android:id="@+id/jdeuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="user"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/jdepassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="password"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/jdeenvironment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Environment"
                    android:inputType="textPassword" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorGray2"
            android:text="Connexion FTP "
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:text="ip" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:inputType="text"
                    android:text="user" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:inputType="text"
                    android:text="pass" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ftp_ipadresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="192.168.129.125" />

                <EditText
                    android:id="@+id/ftp_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="utilisateur"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/ftp_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="mot de passe "
                    android:inputType="textPassword" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorGray2"
            android:text="Map "
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:text="ip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/map_ipadresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="http://102.134.98.158:7001" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            style="@style/loginButton"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="  Enregistrer  " />
        </LinearLayout>
    </ScrollView>
</LinearLayout>